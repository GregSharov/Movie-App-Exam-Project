<!-- header -->
<%- include("partials/header.ejs") %>

<main class="bg-gray-50 dark:bg-gray-800 flex flex-grow justify-center items-center p-8">
  <!-- Print data -->
  <div id="results" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 gap-4">
    <% if (collection.length != 0) { %>
    <% for (let i = 0; i < collection.length; i++) { %>
    <% const movie = collection[i] %>
    <!-- movie Card -->
    <%- include("partials/movieCard.ejs", {movie: movie}) %>
    <% } %>
    <% } else { %>
    <div class="flex flex-col items-center justify-center col-span-full">
      <p class="text-2xl text-center text-gray-700 dark:text-gray-300 col-span-full mb-4">At the moment there are no movies</p>
      <a href="/add" class="inline-block px-4 py-2 bg-blue-500 text-white rounded-lg shadow hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
        Let's add Your favorite movie
      </a>
    </div>
    <% } %>
  </div>
</main>

<!-- footer -->
<%- include("partials/footer.ejs") %>